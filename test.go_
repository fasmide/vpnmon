package main

import (
	"fmt"
	"net"
	"sync"
	"time"

	fastping "github.com/tatsushid/go-fastping"
)

func main() {
	p := fastping.NewPinger()
	p.AddIP("10.8.88.10")
	p.AddIP("10.8.88.6")
	p.OnRecv = func(addr *net.IPAddr, rtt time.Duration) {
		fmt.Printf("IP Addr: %s receive, RTT: %v\n", addr.String(), rtt)
	}
	p.OnIdle = func() {
		fmt.Println("finish")
	}
	p.RunLoop()

	var wg sync.WaitGroup
	wg.Add(1)
	wg.Wait()
}
